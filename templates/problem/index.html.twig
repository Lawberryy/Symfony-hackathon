{% extends 'base.html.twig' %}

{% block title %}Problem index{% endblock %}

{% block body %}
    <h1>Problem index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for problem in problems %}
            <tr>
                <td>{{ problem.id }}</td>
                <td>{{ problem.title }}</td>
                <td>{{ problem.description }}</td>
                <td>{{ problem.date ? problem.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_problem_show', {'id': problem.id}) }}">show</a>
                    <a href="{{ path('app_problem_edit', {'id': problem.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_problem_new') }}">Create new</a>
{% endblock %}
