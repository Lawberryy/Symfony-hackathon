{% extends 'base.html.twig' %}

{% block title %}Hello DomainController!{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }

    .domaine {
        width: 100%;
        height: 100vh;

    }
</style>

<div class="domaine">
    <div class="content">
        <h1> {{ domain.name }} </h1>
        <p>{{ domain.description }} </p>
    </div>
    <div class="content-img">
        <img src="{{ asset('assets/img/Domaines_background_ED.jpg')}}" alt="">
    </div>
</div>
<div class="example-wrapper">
    {% for station in stations %}
    <h1> {{ station.name }} </h1>
    <p> {{ station.description }} </p>
    <a href="{{ path('app_station_show', {'id': station.id}) }}">Afficher</a>
    {% endfor %}
</div>
{% endblock %}