{% extends 'base.html.twig' %}

{% block title %}Liste des domaines{% endblock %}

{% block body %}
<style>
    body {
        background-color: #FAFAFA;
    }

    .example-wrapper {
        padding: 100px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        width: 100%;
        font: 18px/1.5 sans-serif;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }

    .card_domain {
        margin: 2em;
        position: relative;
        width: 90%;
        height: 450px;
    }

    .card_domain img {
        z-index: 1;
        position: absolute;
        object-fit: cover;
        width: 100%;
        height: 100%;
    }

    .card_domain .content {
        height: 80%;
        width: 60%;
        padding: 40px;
        top: 10%;
        bottom: 10%;
        right: 10%;
        left: 30%;
        position: absolute;
        z-index: 3;
        background-color: rgba(255, 255, 255, 0.769);
    }

    .card_domain .content h3 {
        font-size: 1.6em;
    }

    .card_domain .content p {
        padding: 2em 0;
        font-size: 0.9em;
    }

    .card_domain .content a {
        text-decoration: none;
        width: 100%;
        text-align: right;
        padding: 0.5em 1.5em;
        font-size: 0.7em;
        color: white;
        background-color: #DB2828;
    }

    .background {
        z-index: 1;
        position: absolute;
        top: 0;
        z-index: 0;
        width: 100%;
        height: 100vh;
    }

    .background img {
        object-fit: cover;
        position: absolute;
        z-index: 0;
        top: 0;
        width: 100%;
        height: 100vh;
    }

    .section-CTA {
        z-index: 2;
        position: relative;
        width: 100%;
        height: 85vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        color: white;
    }

    .section-CTA h1 {
        padding-bottom: 20px;
        font-size: 75px;
        text-shadow: 0px 4px 4px rgba(0, 0, 0, 0.5);
    }

    .section-CTA button {
        font-size: 16px;
        padding: 0.5em 2em;
        background-color: #DB2828;
        border: none;
    }

    .section-CTA button a {
        text-decoration: none;
        color: white;
    }

    @media (max-width: 768px) {
        .section-CTA h1 {
            font-size: 3em;
        }

        .example-wrapper {
            padding: 100px 20px;
        }

        .card_domain {
            position: relative;
            width: 100%;
            height: 450px;
        }

        .card_domain img {
            z-index: 1;
            position: absolute;
            object-fit: cover;
            top: 0%;
            width: 100%;
            height: 50%;
        }

        .card_domain .content {
            height: 50%;
            width: 100%;
            padding: 20px;
            top: 50%;
            bottom: 0%;
            right: 0%;
            left: 0%;
            position: absolute;
            z-index: 3;
            background: #FFFFFF;
            box-shadow: -20px 20px 40px rgba(0, 0, 0, 0.25);
        }

        .card_domain .content h3 {
            font-size: 1.2em;
        }

        .card_domain .content p {
            padding: 0.8em 0;
            font-size: 0.8em;
        }

        .card_domain .content a {
            text-decoration: none;
            width: 100%;
            text-align: right;
            padding: 0.5em 1.5em;
            font-size: 0.6em;
            color: white;
            background-color: #DB2828;
        }
    }
</style>
<div class="background">
    <img src="{{ asset('assets/img/Domaines_background_ED.jpg')}}" alt="">
</div>
<div class="section-CTA">
    {% if domains is not empty %}
    {% set domain = domains|slice(0, 1) %}
    <h1>{{ domain[0].name }}</h1>
    <button><a href="{{ path('app_domain_show', {'id': domain[0].id}) }}">Voir le domaine</a></button>
    {% endif %}
</div>
<div class="example-wrapper">
    {% for domain in domains %}
    <div class="card_domain">
        <div class="content">
            <h3> {{ domain.name }} </h3>
            <p>{{ domain.description }} </p>
            <a href="{{ path('app_domain_show', {'id': domain.id}) }}">En savoir plus</a>
        </div>
        <img src="{{ asset('assets/img/Domaines_background_ED.jpg')}}" alt="">

    </div>
    {% endfor %}
</div>
{% endblock %}