{% extends 'base.html.twig' %}

{% block title %}Slope{% endblock %}

{% block body %}
    <h1>Slope</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ slope.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ slope.name }}</td>
            </tr>
            <tr>
                <th>Difficulty</th>
                <td>{{ slope.difficulty }}</td>
            </tr>
            <tr>
                <th>First_hour</th>
                <td>{{ slope.firstHour ? slope.firstHour|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Last_hour</th>
                <td>{{ slope.lastHour ? slope.lastHour|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Exception</th>
                <td>{{ slope.exception ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Exception_message</th>
                <td>{{ slope.exceptionMessage }}</td>
            </tr>
            <tr>
                <th>Peak_Hour</th>
                <td>{{ slope.PeakHour ? slope.PeakHour|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Snow_quality</th>
                <td>{{ slope.snowQuality }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_slope_index') }}">back to list</a>

    <a href="{{ path('app_slope_edit', {'id': slope.id}) }}">edit</a>

    {{ include('slope/_delete_form.html.twig') }}
{% endblock %}
